{
  "apps": [{
    "name": "lora-network-server",
    "script": "./bin/lora-network-server",
    "cwd": process.env.PWD,
    "exec_mode": "fork",
    "exec_interpreter": "node",
    "instances": 1,
    "max_memory_restart": "500M",
    "autorestart": true,
    "min_uptime": "30s",
    "node_args": "--max-old-space-size=65500",
    "out_file": "../log/lora-network-server.log",
    "error_file": "../log/lora-network-server.log",
    "combine_logs": true,
    "env": {
      "NODE_ENV": "development"
    },
    "env_production": {
      "NODE_ENV": "production"
    }
  }]
}

